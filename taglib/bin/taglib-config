#!/bin/sh

usage()
{
	echo "usage: $0 [OPTIONS]"
cat << EOH

options:
	[--libs]
	[--cflags]
	[--version]
	[--prefix]
EOH
	exit 1;
}

prefix=C:/Program Files/taglib
exec_prefix=C:/Program Files/taglib
libdir=C:/Program Files/taglib/lib
includedir=C:/Program Files/taglib/include

flags=""

if test $# -eq 0 ; then
  usage
fi

while test $# -gt 0
do
  case $1 in
    --libs)
	  flags="$flags -L$libdir -ltag"
	  ;;
    --cflags)
	  flags="$flags -I$includedir/taglib"
	  ;;
    --version)
	  echo 1.7.0 
	  ;;
    --prefix)
	  echo $prefix
	  ;;
	*)
	  echo "$0: unknown option $1"
	  echo
	  usage
	  ;;
  esac
  shift
done

if test -n "$flags"
then
  echo $flags
fi
